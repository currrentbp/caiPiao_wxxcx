.container {
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx 0;
  box-sizing: border-box;
}

.next {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 500rpx 0;
  box-sizing: border-box;
}

.red {
  height:10px;
  width: 10px;
  border-radius: 50%;
  background: red;
  text-align: center;
}

.blue {
  width: 15px;
  height: 15px;
  border: 1px solid #0066FF;
  border-radius: 50%;
  background: #0066FF;
  text-align: center;
}